{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["bun-types"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "noEmit": true,
    "lib": ["ESNext"],
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*", "example/**/*"],
  "exclude": ["node_modules", "dist"]
}
